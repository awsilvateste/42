using System;

public class Contato
{
    public int Id;
    public string Nome;
    public string Telefone;

    public Contato(int id, string nome, string telefone)
    {
        Id = id;
        Nome = nome;
        Telefone = telefone;
    }

    public void MostrarInformacoes()
    {
        Console.WriteLine("Informações do Contato:");
        Console.WriteLine($"ID: {Id}");
        Console.WriteLine($"Nome: {Nome}");
        Console.WriteLine($"Telefone: {Telefone}");
    }
}

public class Produto
{
    public int Id;
    public string Nome;
    public decimal Preco;

    public Produto(int id, string nome, decimal preco)
    {
        Id = id;
        Nome = nome;
        Preco = preco;
    }

    public void MostrarInformacoes()
    {
        Console.WriteLine("Informações do Produto:");
        Console.WriteLine($"ID: {Id}");
        Console.WriteLine($"Nome: {Nome}");
        Console.WriteLine($"Preço: {Preco:C}");
    }
}

public class Transacao
{
    public int Id;
    public DateTime Data;
    public int Quantidade;

    public Transacao(int id, DateTime data, int quantidade)
    {
        Id = id;
        Data = data;
        Quantidade = quantidade;
    }

    public void MostrarInformacoes()
    {
        Console.WriteLine("Informações da Transação:");
        Console.WriteLine($"ID: {Id}");
        Console.WriteLine($"Data: {Data}");
        Console.WriteLine($"Quantidade: {Quantidade}");
    }
}

class Program
{
    static void Main(string[] args)
    {
        Contato meuContato = new Contato(1, "João da Silva", "(11) 1234-5678");
        meuContato.MostrarInformacoes();

        Produto meuProduto = new Produto(1, "Produto X", 10.99m);
        meuProduto.MostrarInformacoes();

        Transacao minhaTransacao = new Transacao(1, DateTime.Now, 5);
        minhaTransacao.MostrarInformacoes();

        Console.ReadKey();
    }
}
